<script>
    $(document).ready(function () {
        $("#btnExcel").on("click", function () {
            
            var myValue = $("#enumValue option:selected").val();

            var url = "/Purchases/GenerateExcel?duration=" + myValue;

            window.location.href = url;
        });
    });


</script>
