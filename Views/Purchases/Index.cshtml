<div class="container mt-5">
    <!-- Dropdown and Buttons -->
    <div class="row mb-3">
        <div class="col-md-3">
            <label for="exampleDropdown">Select Duration:</label>
            <select asp-items="Html.GetEnumSelectList<Duration>()" class="form-control" id="enumValue">
                <option value="">Select an option</option>
            </select>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary mt-1" id="btnExcel">Generate Report</button>
        </div>
        <div class="col-md-3">
            <a asp-action="Create" class="btn btn-success mt-1"class="anbutton">Purchase</a>
        </div>
    </div>

    <!-- Data Table -->
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer Name</th>
                <th>Date</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PurchaseId</td>
                    <td>@item.SupplierName</td>
                    <td>@item.Date.ToString("dd-MM-yyyy")</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
